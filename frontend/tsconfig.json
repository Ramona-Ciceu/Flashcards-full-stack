{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react"
  },
  "include": ["src", "tests/**/*" ]
}
